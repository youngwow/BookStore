<h2 class="page-header">Search Books</h2>
<form action="/books" method="get">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title%>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Published After</label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter%>">
        </div>
        <div class="form-item">
            <label>Published Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore%>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <label>All:<input type="radio" name="all_books" checked="checked" value="<%= searchOptions.all_books ? 'all' : 'unchecked'%>"></label>
        <label>Only available<input type="radio" name="all_books" value="<%= searchOptions.all_books ? 'only' : 'unchecked'%>"></label>
        <label>Soon<input type="radio" name="all_books" value="<%= searchOptions.all_books ? 'soon' : 'unchecked'%>"></label>
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<%- include('../partials/bookGrid', {books: books, large: true} );%>

